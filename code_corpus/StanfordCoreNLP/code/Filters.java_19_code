  public static class RandomFilter<E> implements Filter<E> {
    final Random random;
    final double fraction;

    public RandomFilter() {
      this(0.1, new Random());
    }

    public RandomFilter(double fraction) {
      this(fraction, new Random());
    }

    public RandomFilter(double fraction, Random random) {
      this.fraction = fraction;
      this.random = random;
    }

    public boolean accept(E o) {
      return (random.nextDouble() < fraction);
    }
  }

