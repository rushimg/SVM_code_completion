  public int getFeatureCount(double threshold, boolean useMagnitude)
  {
    int n = 0;
    for (double[] weightArray : weights) {
      for (double weight : weightArray) {
        double thisWeight = (useMagnitude) ? Math.abs(weight) : weight;
        if (thisWeight > threshold) {
          n++;
        }
      }
    }
    return n;
  }

