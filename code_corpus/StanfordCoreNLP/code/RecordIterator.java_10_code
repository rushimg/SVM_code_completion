  public RecordIterator(InputStream in) { 
    this(in, 0, false, WHITESPACE);
  }


  // iterator methods ------------------------------------------------------

  public boolean hasNext() { 
    return (nextResult != null);
  }
  
  public List<String> next() {
    List<String> result = nextResult;
    advance();
    return result;
  }
  
  public void remove() {
    throw new UnsupportedOperationException();
  }


