  public static String quotify(String str) {
    StringBuffer buffer = new StringBuffer();
    buffer.append('\"');
    for (int i = 0; i < str.length(); i++) {
      if (str.charAt(i) == '\"')
        buffer.append('\\');
      buffer.append(str.charAt(i));
    }
    buffer.append('\"');
    return buffer.toString();
  }

