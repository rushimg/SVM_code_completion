  public WordTag(String word, String tag) {
    setWord(word);
    setTag(tag);
  }

  public WordTag(String word) {
    this(word, null);
  }

  public <E extends Label & HasTag> WordTag(E word) {
    this(word.value(), word.tag());
  }

  private WordTag() { }  // only used internally for doing setFromString()

