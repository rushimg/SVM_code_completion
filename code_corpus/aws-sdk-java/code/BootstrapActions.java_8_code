    public ConfigureHadoop withXml(ConfigFile file, String xmlPath) {
      String arg = "";

      switch (file) {
      case Site: arg = "-S"; break;
      case Default: arg = "-D"; break;
      case Core: arg = "-C"; break;
      case Hdfs: arg = "-H"; break;
      case Mapred: arg = "-M"; break;
      }

      args.add(arg);
      args.add(xmlPath);
      return this;
    }

