    public ConfigureHadoop withKeyValue(ConfigFile file, String key, String value) {
      String arg = "";

      switch (file) {
      case Site: arg = "-s"; break;
      case Default: arg = "-d"; break;
      case Core: arg = "-c"; break;
      case Hdfs: arg = "-h"; break;
      case Mapred: arg = "-m"; break;
      }

      args.add(arg);
      args.add(key + "=" + value);
      return this;
    }

