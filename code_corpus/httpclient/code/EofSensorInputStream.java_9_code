    protected void checkAbort() throws IOException {

        if (wrappedStream != null) {
            try {
                boolean scws = true; // should close wrapped stream?
                if (eofWatcher != null) {
                    scws = eofWatcher.streamAbort(wrappedStream);
                }
                if (scws) {
                    wrappedStream.close();
                }
            } finally {
                wrappedStream = null;
            }
        }
    }

