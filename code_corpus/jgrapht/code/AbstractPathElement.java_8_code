    protected AbstractPathElement(
        Graph<V, E> graph,
        AbstractPathElement<V, E> pathElement,
        E edge)
    {
        this.vertex =
            Graphs.getOppositeVertex(
                graph,
                edge,
                pathElement.getVertex());
        this.prevEdge = edge;
        this.prevPathElement = pathElement;

        this.nHops = pathElement.getHopCount() + 1;
    }

