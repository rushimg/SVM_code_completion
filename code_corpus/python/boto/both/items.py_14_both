    def mark_clean(self):
        """
        Marks an ``Item`` instance as no longer needing to be saved.
        Example:
            >>> user.needs_save()
            False
            >>> user['first_name'] = 'Johann'
            >>> user.needs_save()
            True
            >>> user.mark_clean()
            >>> user.needs_save()
            False
        """
        self._orig_data = deepcopy(self._data)
