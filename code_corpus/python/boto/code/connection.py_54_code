    def create_role(self, role_name, assume_role_policy_document=None, path=None):
        
        params = {
            'RoleName': role_name,
            'AssumeRolePolicyDocument': self._build_policy(
                assume_role_policy_document
            ),
        }
        if path is not None:
            params['Path'] = path
        return self.get_response('CreateRole', params)
