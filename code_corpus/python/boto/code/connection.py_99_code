    def get_all_tags(self, filters=None, dry_run=False, max_results=None):
        
        params = {}
        if filters:
            self.build_filter_params(params, filters)
        if dry_run:
            params['DryRun'] = 'true'
        if max_results is not None:
            params['MaxResults'] = max_results
        return self.get_list('DescribeTags', params,
                             [('item', Tag)], verb='POST')
